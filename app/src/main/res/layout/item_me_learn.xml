<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="10dp"
              android:orientation="horizontal"
    >

    <FrameLayout
        android:id="@+id/icon_ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/me_learn_img"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@mipmap/online_file_img"/>

        <ImageView
            android:id="@+id/state_ml"
            android:layout_width="29dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/online_file_noover"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/context"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:text="全国党员先锋要加快党建学习好不容缓的跟着党的步伐前进。"
            android:textColor="@color/tab_text"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/study_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选学"
                android:textColor="@color/gray"
                android:textSize="13dp"
                />

            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  3分"
                android:textColor="@color/gray"
                android:textSize="13dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/study_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学习时间:10"
                android:textColor="@color/gray"
                android:textSize="13dp"
                />

            <TextView
                android:id="@+id/learn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="已学时间:7"
                android:textColor="@color/gray"
                android:textSize="13dp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>



