<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >


        <ImageView
            android:id="@+id/me_learn_img"
            android:layout_width="120dp"
            android:layout_height="82dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/online_file_img" />

    <TextView
        android:id="@+id/context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:lineSpacingExtra="5dp"
        android:layout_toLeftOf="@+id/back"
        android:layout_toRightOf="@id/me_learn_img"
        android:textSize="14dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="全国党员先锋要加快党建学习好不容缓的跟着党的步伐前进。"
        android:textColor="@color/tab_text" />

   <TextView
       android:id="@+id/back"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:background="@mipmap/ic_next_click"
       />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="选学"
    android:textColor="@color/gray"
    android:textSize="13dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/me_learn_img"
    />

    <TextView
        android:id="@+id/learn_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成"
        android:textColor="@color/gray"
        android:layout_toRightOf="@+id/me_learn_img"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:background="@drawable/me_learn_status"
        android:padding="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tab_text"
        android:layout_toRightOf="@+id/learn_status"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:text="需时:0分"
        />

</RelativeLayout>



