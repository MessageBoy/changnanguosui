<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="311dp"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:text="正在更新..."
        android:textColor="#31a3ee"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#31a3ee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="203dp"
            android:layout_height="15dp"
            android:background="@mipmap/ic_down_back"
            android:indeterminateBehavior="repeat"
            android:indeterminateOnly="false"
            android:max="100"
            android:padding="0dp"
            android:progress="80"
            android:progressDrawable="@drawable/progressbarclor"/>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="80%"
            android:textColor="#31C0EE"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/selector_update_later"
        android:gravity="center"
        android:text="取消更新"
        android:textColor="#353535"
        android:textSize="17sp"/>

</LinearLayout>