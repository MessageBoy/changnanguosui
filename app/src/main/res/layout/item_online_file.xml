<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
    >

    <FrameLayout
        android:id="@+id/online_img_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_of"
            android:layout_width="120dp"
            android:layout_height="82dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/online_file_img"/>

        <ImageView
            android:id="@+id/state_of"
            android:layout_width="29dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/online_file_noover"/>
    </FrameLayout>


    <TextView
        android:id="@+id/context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/online_img_frame"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:text="全国党员先锋要加快党建学习好不容缓的跟着党的步伐前进。"
        android:textColor="@color/tab_text"
        android:textSize="14dp"/>


    <TextView
        android:id="@+id/time_of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/online_img_frame"
        android:text="3-24  12:25"
        android:textColor="@color/gray"
        android:textSize="12dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/online_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/online_but_bg"
            android:text="三会一课"
            android:textColor="@color/white"
            android:textSize="10dp"/>

        <ImageView
            android:id="@+id/collection_of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/online_but"
            android:layout_toLeftOf="@+id/collection_txt"
            android:drawableLeft="@mipmap/online_sc"/>

        <TextView
            android:id="@+id/collection_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/online_but"
            android:text="收藏"
            android:textColor="@color/gray"
            android:textSize="12dp"
            />
    </RelativeLayout>
</RelativeLayout>



